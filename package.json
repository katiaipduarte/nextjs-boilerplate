{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "install:npm": "rm -rf node_modules && rm package-lock.json && npm i",
    "install:yarn": "rm -rf node_modules && rm yarn.lock && yarn",
    "dev": "next dev",
    "build": "next build",
    "start": "next build && next start -p 80",
    "type-check": "tsc",
    "lint": "npm run type-check && eslint */**/*.{ts,tsx} --quiet --fix",
    "format": "prettier --config ./.prettierrc --write \"*/**/*{.ts,.tsx}\"",
    "find:unused": "next-unused",
    "test": "jest",
    "test:watch": "npx test --watch",
    "test:coverage": "npx jest --coverage"
  },
  "dependencies": {
    "he": "^1.2.0",
    "next": "^10.2.3",
    "next-seo": "^4.24.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "slugify": "^1.5.3",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.31.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/he": "^1.1.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/react": "^17.0.8",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "babel-jest": "^27.0.2",
    "eslint": "^7.27.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.7.0",
    "husky": "^6.0.0",
    "jest": "^27.0.3",
    "lint-staged": "^11.0.0",
    "next-unused": "^0.0.6",
    "prettier": "^2.3.0",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint '*/**/*.{ts,tsx}' --fix"
    ]
  },
  "next-unused": {
    "alias": {
      "@components/*": [
        "components/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@store/*": [
        "store/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    },
    "debug": true,
    "include": [
      "components",
      "lib",
      "store",
      "pages",
      "utils"
    ],
    "exclude": [],
    "entrypoints": [
      "pages"
    ]
  }
}
